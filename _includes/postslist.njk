<div class="container px-4 px-lg-5">
	<div class="row gx-4 gx-lg-5 justify-content-center">
		<div class="col-md-10 col-lg-8 col-xl-7">
			<!-- Post preview-->
			{% for post in postslist | reverse %}
			<div class="post-preview">
				<a href="{{ post.url | url }}">
					<h2 class="post-title">{{ post.data.title }}</h2>
					<h3 class="post-subtitle">{{ post.data.description }}</h3>
				</a>
				<p class="post-meta">
					Posted by
					<a href="https://www.facebook.com/groups/123654164372747/user/1661670046">{{ metadata.author.name }}</a>
					on <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
				</p>
			</div>
			<hr />
			{% endfor %}
		</div>
	</div>
</div>
